<div class="max-w-4xl w-3/4 mx-auto p-6">
  <h1 class="text-3xl font-bold mb-4">アニメ一覧</h1>

  <% if @animes.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @animes.each do |anime| %>
        <div class="bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition">
          <h2 class="text-xl font-semibold text-gray-700 mb-2">
            <%= link_to anime.title, anime_path(anime), class: "text-blue-600 hover:underline" %>
          </h2>
          <p class="text-gray-600"><%= anime.comment %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">まだアニメが登録されていません。</p>
  <% end %>
</div>